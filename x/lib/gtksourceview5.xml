    <bridgehead renderas="sect3">Dependências de GtkSourceView</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="gtk4"/> and <xref linkend="pcre2"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <xref linkend="gobject-introspection"/> and <xref linkend="libxml2"/>
    </para>

    <bridgehead renderas="sect4">Opcionais</bridgehead>
    <para role="optional">
      <xref linkend="gtk-doc"/>, <xref linkend="sysprof"/>, <xref
linkend="vala"/>, and <xref linkend="valgrind"/>
    </para>

    <para condition="html" role="usernotes">
