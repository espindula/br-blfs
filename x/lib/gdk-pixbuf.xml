          <indexterm zone="gdk-pixbuf libgdk_pixbuf-2">
            <primary sortas="c-libgdk_pixbuf-2">libgdk_pixbuf-2.0.so</primary>
          </indexterm>
        </listitem>
      </varlistentry>

