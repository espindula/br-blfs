<sect1 id="xcb-util-cursor" xreflabel="xcb-util-cursor-&xcb-util-cursor-version;">
  <?dbhtml filename="xcb-util-cursor.html"?>


  <title>xcb-util-cursor-&xcb-util-cursor-version;</title>

