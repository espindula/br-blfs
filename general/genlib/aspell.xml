    <itemizedlist spacing="compact">
      <listitem>
        <para>
          Aspell dictionaries: <ulink url="&gnu-http;/aspell/dict"/>
        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Dependências de Aspell</bridgehead>

