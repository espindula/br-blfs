    <bridgehead renderas="sect3">Dependências de UDisks</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="libatasmart"/>, <xref linkend="libblockdev"/>, <xref
linkend="libgudev"/>, <xref linkend="libxslt"/>, and <xref
linkend="polkit"/>
    </para>

    <bridgehead renderas="sect4">Required at runtime</bridgehead>
    <para role="required">
      <xref role="runtime" linkend="btrfs-progs"/>, <phrase revision="sysv"><xref
role="runtime" linkend="dbus"/>,</phrase> <xref role="runtime"
linkend="dosfstools"/>, <xref role="runtime" linkend="gptfdisk"/>, <xref
role="runtime" linkend="mdadm"/>, and <xref role="runtime"
linkend="xfsprogs"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <phrase revision="systemd"><xref linkend="systemd"/></phrase> <phrase
revision="sysv"><xref linkend="elogind"/></phrase>
    </para>

    <bridgehead renderas="sect4">Opcionais (Exigidas se construir GNOME)</bridgehead>
    <para role="optional">
      <xref linkend="gobject-introspection"/>
    </para>

