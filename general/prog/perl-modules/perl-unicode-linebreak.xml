      <itemizedlist spacing="compact">
        <listitem>
          <para>
            Transferência (HTTP): <ulink url="&my-download-http;"/>
          </para>
        </listitem>
        <listitem>
          <para>
            Soma de verificação MD5: &my-md5sum;
          </para>
        </listitem>
      </itemizedlist>

      <bridgehead renderas="sect4">Dependências de Unicode::LineBreak</bridgehead>

      <bridgehead renderas="sect5">Exigida</bridgehead>
      <para role="required">
        <xref linkend="perl-mime-charset"/>, also <xref linkend="wget"/> (to
download two files from unicode.org in the test suite)
      </para>

      <bridgehead renderas="sect5">Opcionais</bridgehead>
      <para role="recommended">
        <ulink url="https://linux.thai.net/projects/libthai/">libthai</ulink> (to
break Thai words into segments)
      </para>

