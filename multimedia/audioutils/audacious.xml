    <bridgehead renderas="sect3">Dependências de Audacious</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="gtk2"/> or <xref role="nodep" linkend="qt5"/> (or both),
<xref linkend="libxml2"/> (plugins), <xref linkend="xorg-env"/> (plugins),
and <xref role="runtime" linkend="x-window-system"/> (runtime)
    </para>

    

