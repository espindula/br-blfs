    <bridgehead renderas="sect3">Dependências do Audacious</bridgehead>

    <bridgehead renderas="sect4">Exigidas</bridgehead>
    <para role="required">
      <xref linkend="gtk2"/> ou <xref role="nodep" linkend="qt5"/> (ou ambos),
<xref linkend="libxml2"/> (plugins), <xref linkend="xorg-env"/> (plugins) e
<xref role="runtime" linkend="x-window-system"/> (tempo de execução)
    </para>

    

