<bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="optional">
      <xref linkend="alsa"/> and <xref linkend="dbus"/>, also <xref role="runtime"
linkend="gnome-icon-theme"/> (runtime)
    </para>

    <bridgehead renderas="sect4">Opcionais</bridgehead>
    <para role="optional">
      <xref linkend="libarchive"/> and <xref linkend="valgrind"/>
    </para>

