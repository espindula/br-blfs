<bridgehead renderas="sect3">Dependências de GLib Networking</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="glib2"/> and <xref linkend="gnutls"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <!-- p11-kit option no longer exists, and is pulled in by GnuTLS anyway -->
<xref linkend="gsettings-desktop-schemas"/> (for the applications using this
package to use proxy server settings in GNOME) and <xref linkend="make-ca"/>
      
    </para>

    <bridgehead renderas="sect4">Opcionais</bridgehead>
    <para role="optional">
      <ulink url="https://github.com/libproxy/libproxy">libproxy</ulink>
    </para>

