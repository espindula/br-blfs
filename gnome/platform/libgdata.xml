    <bridgehead renderas="sect3">Dependências de libgdata</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="libsoup"/>, <xref linkend="gnome-online-accounts"/>, <xref
linkend="gtk3"/>, <xref linkend="json-glib"/>, and <xref linkend="vala"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <xref linkend="gcr"/> and <xref linkend="gobject-introspection"/>
    </para>

    <bridgehead renderas="sect4">Opcionais</bridgehead>
    <para role="optional">
      <xref linkend="gtk-doc"/> (for documentation), <xref linkend="liboauth"/>
(for OAuth v1 support), and <xref linkend="uhttpmock"/> (required for tests)
    </para>

