    <bridgehead renderas="sect3">Dependências de Grilo</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="glib2"/> and <xref linkend="libxml2"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <xref linkend="gobject-introspection"/>, <xref linkend="gtk3"/>, <xref
linkend="libsoup3"/>, <xref linkend="totem-pl-parser"/>, and <xref
linkend="vala"/>
    </para>

    <bridgehead renderas="sect4">Opcionais</bridgehead>
    <para role="optional">
