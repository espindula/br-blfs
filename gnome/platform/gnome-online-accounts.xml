        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Dependências de GNOME Online Accounts</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="gcr"/>, <xref linkend="json-glib"/>, <xref linkend="rest"/>,
<xref linkend="vala"/>, and <xref linkend="webkitgtk"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <xref linkend="gobject-introspection"/>
    </para>

    <bridgehead renderas="sect4">Opcionais</bridgehead>
