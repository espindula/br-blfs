    <bridgehead renderas="sect3">Dependências de GNOME Nettool</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="gtk3"/>, <xref linkend="itstool"/>, and <xref
linkend="libgtop"/>
    </para>

