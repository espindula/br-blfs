        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Dependências de GNOME Calculator</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="gtksourceview5"/>, <xref linkend="itstool"/>, <xref
linkend="libadwaita1"/>, <xref linkend="libgee"/>, <xref
linkend="libhandy1"/>, and <xref linkend="libsoup3"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
