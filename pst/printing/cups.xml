          <para>
            contém as funções da API do <application>Cups</application>
          </para>
          <indexterm zone="cups libcups">
            <primary sortas="c-libcups">libcups.so</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

