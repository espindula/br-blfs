    <bridgehead renderas="sect3">Dependncias de LXDE Common</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="lxde-icon-theme"/>, <xref linkend="lxpanel"/>, <xref
linkend="lxsession"/>, <xref role="runtime" linkend="openbox"/> (runtime),
and <xref linkend="pcmanfm"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
    <para role="recommended">
      <xref linkend="desktop-file-utils"/>, <xref linkend="hicolor-icon-theme"/>,
and <xref linkend="shared-mime-info"/>
    </para>

    <bridgehead renderas="sect4">Dependncias Opcionais em Tempo de Execuo</bridgehead>
    <para role="optional">
      
      <!-- polkit agent built in lxsession -->
A notification daemon such as <xref role="runtime"
linkend="notification-daemon"/> or <xref role="runtime"
linkend="xfce4-notifyd"/>, and a display manager such as <xref
role="runtime" linkend="lxdm"/> or <xref role="runtime" linkend="lightdm"/>
    </para>

