        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Dependências de libwnck</bridgehead>

    <bridgehead renderas="sect4">Exigida</bridgehead>
    <para role="required">
      <xref linkend="gtk2"/>
    </para>

    <bridgehead renderas="sect4">Recomendada</bridgehead>
